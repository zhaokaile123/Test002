<?xml version="1.0" encoding="utf-8"?>
<atguigu.com.test002.view.TtileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ff3097fd"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_topbanner_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_sousuokuang"
        android:clickable="true"
        android:textColor="@drawable/select_text"
        android:text="全网搜索"
        android:drawableLeft="@drawable/select_sousuo"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        android:background="@drawable/select_sousuokuang"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/game"
            android:drawableLeft="@drawable/ic_topbanner_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignRight="@id/game"
            android:background="@drawable/point"
            android:layout_width="6dp"
            android:layout_height="6dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:id="@+id/jilu"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_topbanner_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</atguigu.com.test002.view.TtileView>